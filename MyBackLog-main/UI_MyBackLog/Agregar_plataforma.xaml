        <TextBox Foreground="black" Background="White"  x:Name="titulo_plataforma_add" HorizontalAlignment="Left" Height="23" Margin="18,141,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="291" MaxLength="40"/>
